<UserControl x:Class="Frontend.UserControls.TT_SwapButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frontend.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Style="{StaticResource UniversalButton}" Background="{StaticResource CD_GreyBrown}">
            <DockPanel >
                <Image Style="{StaticResource ImageButton}" Source="{StaticResource trade_w}"></Image>
                <TextBlock Foreground="{StaticResource CD_White}" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="20">Tauschen</TextBlock>
            </DockPanel>


        </Button>

    </Grid>
</UserControl>
