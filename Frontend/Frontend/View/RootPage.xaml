<Page x:Class="Frontend.View.RootPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Frontend.View"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="RootPage">
    <Grid x:Name="MainGrid" Width="1980" Height="1080" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="1640"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="1000" />
        </Grid.RowDefinitions>
        <!--topbar-->
        <StackPanel  x:Name="TopBarStackPanel"  HorizontalAlignment="Left" Height="80" Grid.RowSpan="2" VerticalAlignment="Top" Width="1920"/>
        <!--sidebar-->
        <Grid x:Name="LeftMenuGrid" Width="280" Height="1000" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="690" />
            </Grid.RowDefinitions>
            <Button Content="Home" FontSize="24" Width="230" Height="50" HorizontalAlignment="Left" FontFamily="Roboto" Click="Home_Button_Click" Grid.Row="1" Style="{StaticResource MenuButton}" />
            <Button Content="Mein Stundenplan" FontSize="24" Width="230" Height="50" HorizontalAlignment="Left" FontFamily="Roboto" Click="Timetable_Button_Click" Grid.Row="2" Style="{StaticResource MenuButton}"/>
            <Button Content="Tauschboerse" FontSize="24" Width="230" Height="50" HorizontalAlignment="Left" FontFamily="Roboto" Click="Timetable_Button_Click" Grid.Row="3" Style="{StaticResource MenuButton}"/>
            <Button Content="Stammdaten" FontSize="24" Width="230" Height="50" HorizontalAlignment="Left" FontFamily="Roboto" Click="Timetable_Button_Click" Grid.Row="4" Style="{StaticResource MenuButton}"/>
            <Button Content="Admin" FontSize="24" Width="230" Height="50" HorizontalAlignment="Left" FontFamily="Roboto" Click="Timetable_Button_Click" Grid.Row="5" Style="{StaticResource MenuButton}"/>
        </Grid>
        <Frame x:Name="MainFrame" Source="HomePage.xaml" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Page>
