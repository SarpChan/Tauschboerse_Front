<Page x:Class="Frontend.View.RootPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Frontend.View"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="RootPage">

    <Grid x:Name="MainGrid" Width="1980" Height="1080" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="1640"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="1000" />
        </Grid.RowDefinitions>
        <!--topbar-->
        <Border Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="0,0,0,1">
            <StackPanel x:Name="TopBarStackPanel" HorizontalAlignment="Left" Height="80" Grid.ColumnSpan="2" VerticalAlignment="Top" Width="1920" Orientation="Horizontal">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Rectangle Width="50"/>
                    <Image Name="StuPla" Source="../Resources/Icons/stupla_logo.png" Height="50" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Left" />
                    <TextBlock Padding="10,21,0,0" Width="120" Height="80" Text="StuPla" FontFamily="/Frontend;component/Resources/Fonts/#Roboto Lt" TextAlignment="Center" FontSize="32"/>
                </StackPanel>
                <Rectangle Width="1450"/>
                <Button Click="Home_Button_Click" Style="{StaticResource LogoutButton}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Padding="10,21,0,0" Width="180" Height="80" Text="Abmelden" FontFamily="/Frontend;component/Resources/Fonts/#Roboto Lt" TextAlignment="Center" FontSize="24"/>
                    <Image Name="Logout" Source="../Resources/Icons/logout_b.png" Height="30" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Left" />
            </StackPanel>
                </Button>
            </StackPanel>
        </Border>
        <!--sidebar-->
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="0,0,1,0">
        <Grid x:Name="LeftMenuGrid" Width="280" Height="1000" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="0"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="690" />
            </Grid.RowDefinitions>
            <Border BorderThickness="0,0,0,1" BorderBrush="Black" Grid.Row="0"/>
            <Button Tag="Home" Click="Home_Button_Click" Grid.Row="1" Style="{StaticResource MenuButton}" />
            <Button Tag="Mein Stundenplan" Click="Timetable_Button_Click" Grid.Row="2" Style="{StaticResource MenuButton}"/>
            <Button Tag="Tauschboerse" Click="Timetable_Button_Click" Grid.Row="3" Style="{StaticResource MenuButton}"/>
            <Button Tag="Stammdaten" Click="Timetable_Button_Click" Grid.Row="4" Style="{StaticResource MenuButton}"/>
            <Button Tag="Admin" Click="Timetable_Button_Click" Grid.Row="5" Style="{StaticResource MenuButton}"/>
        </Grid>
        </Border>
        <Frame x:Name="MainFrame" Source="HomePage.xaml" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Page>
