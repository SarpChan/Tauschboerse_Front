<Page x:Class="Frontend.View.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:user_controls="clr-namespace:Frontend.UserControls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1640"
      Title="Admin">
    
    <Page.Resources>
        <!-- margin rectangle -->
        <Thickness  x:Key="RectangleMargin" Right="10" Left="30" />
        <!-- caption rectangle -->
        <Style TargetType="{x:Type Rectangle}" x:Key="rectangle">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="{StaticResource RectangleMargin}"/>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="Uploadbutton" BasedOn="{StaticResource adminButton}">
            <Setter Property="Width" Value="400"/>
            <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" BorderBrush="{StaticResource CD_Grey}" BorderThickness="1.5" Background="{TemplateBinding Background}">
                        <DockPanel>
                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                <Rectangle Name="Upload" Width="25" Height="25" Margin="{StaticResource IconMargin}" Fill="{StaticResource upload_b }"/>
                                <TextBlock VerticalAlignment="Center">Neuen Studenplan hochladen</TextBlock>
                        </DockPanel>

                    </Border>
                    <!--Triggers for switching on hover -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Background" Value="{StaticResource CD_LightBlueGrey}"/>
                            <Setter Property="Foreground" Value="{StaticResource CD_DarkTeal}"/>
                            <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource CD_DarkTeal}"/>
                                <!--<Setter TargetName="Upload" Property="Source" Value="{StaticResource save_hover_b}" /> -->
                            </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    
    
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
    <!-- grid definition-->
    <Grid Width="1640" Height="1000" Background="White">
        <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition  Width="0.5*"/>
        </Grid.ColumnDefinitions>

            <Canvas Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3">
                <Line  Stroke="{StaticResource CD_LightGrey}"  X1="0" Y1="10" X2="1000" Y2="10" StrokeThickness="2"/>
                <!-- caption-->
                <DockPanel Canvas.Top="50"  >
                    <Rectangle  Fill="{StaticResource CD_DarkTeal}" Style="{StaticResource rectangle}" />
                    <TextBlock Text="= Ausgewähltes Semester" Style="{StaticResource TextTextblock}"/>
                    <Rectangle Fill="{StaticResource CD_GreyBrown}" Style="{StaticResource rectangle}" />
                    <TextBlock Text="= Stundenplan vorhanden" Style="{StaticResource TextTextblock}" />
                    <Rectangle Stroke="{StaticResource CD_GreyBrown}" StrokeThickness="3" Style="{StaticResource rectangle}" />
                    <TextBlock Text="= Stundenplan fehlt" Style="{StaticResource TextTextblock}" />
                </DockPanel>
                <DockPanel Canvas.Top="100">
                    <user_controls:SelectionBarElement SelectionBarElementCommand="{Binding SwitchToTimetablePage}" />
                </DockPanel>
                <DockPanel Canvas.Top="200">
                    <Button Style="{StaticResource Uploadbutton}"/>
                    
                </DockPanel>
            </Canvas>
        </Grid>
    </ScrollViewer>
</Page>
